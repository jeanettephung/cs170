<div id="createdEventDetail" class="container col-xs-12">

	{{#each events}}
	{{#if created}}
		<h3><center>{{name}}</center></h3>
		<center><img src="{{imageURL}}" class=" img-responsive"></center>

		<div class="col-xs-12 margin-top">
			<span><strong>Time: </strong></span>
			{{startTime}} to {{endTime}}
		</div>

		<div class="col-xs-12">
			<span><strong>Category: </strong></span>
			{{category}}
		</div>

		<div class="col-xs-12">
			<span><strong>Description: </strong></span>
			{{description}}
		</div>
	{{/if}}
	{{/each}}


	<a href="/editEvent"><button class="btn btn-primary col-xs-12 btn-lg margin-top">Edit Event</button></a>
	<a href="/cancelEvent"><button class="btn btn-primary col-xs-12 btn-lg margin-top">Cancel Event</button></a>
	<a href="/index"><button class="btn btn-primary col-xs-12 btn-lg margin-top">Back</button></a>
</div>