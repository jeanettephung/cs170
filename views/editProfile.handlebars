<div id="editProfile" class="container">

    <form id="editProfileForm">
        <div class="row">
            <div class="col s12">
                <center><img class="img-circle img-responsive profile-image"></center>
				<h3 class='title2 text-center' id="editProfile_username">{{username}}</h3>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <label for="name"><strong>Name: </strong></label>
                <input type="text" class="form-control" id="editProfile_name" value="{{name}}" name="name" required>
            </div>

            <div class="input-field col s12">
                <label for="expertise" ><strong>Expertises: </strong></label>
                <input type="text" class="form-control" id="editProfile_expertise" value="{{expertise}}" name="expertise" required>
            </div>

            <div class="input-field col s12">
                <label for="editProfile_aboutMe">About Me:</label>
                <textarea type="text" class="materialize-textarea" id="editProfile_aboutMe">{{aboutMe}}</textarea>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <input class="btn btn-primary col-xs-12 btn-lg margin-top" id="editProfile_submit" value="UPDATE" type="submit">
                <a href="/myProfile" class="btn btn-primaryÃŸ col-xs-12 btn-lg margin-top">Cancel Changes</a>
            </div>
        </div>
    </form>
</div>

<script>
	$("#editProfile_submit").click(function(e){
		var name = $('#editProfile_name').val();
		var expertise = $('#editProfile_expertise').val();
		var aboutMe = $('#editProfile_aboutMe').val();
		var updateAction = "/updatingProfile/"+name+"/"+expertise+"/"+aboutMe;
		$('#editProfileForm').attr('action', updateAction);
	});
</script>
