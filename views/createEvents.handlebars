                <option>3am</option>
                <option>4am</option>
                <option>5am</option>
                <option>6am</option>
                <option>7am</option>
                <option>8am</option>
                <option>9am</option>
                <option>10am</option>
                <option>11am</option>
            </select>
        </div>
        {{!--
        <div class="input-field col s12">
        <input id="email" type="email" class="validate" required>
        <label for="email" data-error="Enter a valid Email">Email</label>
    </div> --}}

    <div class="col s12 input-field">
        <label for="create-category">Category </label>
        <input class="validate" type="text" id="create_category" name="category" required>
    </div>

    <div class="col s12 form-group">
        <label for="description">Event Description </label>
        <textarea class="form-control" id="create_description" name="description" rows="3" required></textarea>
    </div>
</div>

<div class="row">
        <button id="createEvent_submit" class="btn waves-effect waves-light col s12" value = "Create Event" type="submit" name="action">
            Create Event
        </button>

</div>

<div class="row">
    <a href="/index">
        <button class="btn btn-primary waves-effect waves-light col s12 ">Cancel</button>
    </a>
</div>

</form>
</div>
