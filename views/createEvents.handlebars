                <option>3am</option>
                <option>4am</option>
                <option>5am</option>
                <option>6am</option>
                <option>7am</option>
                <option>8am</option>
                <option>9am</option>
                <option>10am</option>
                <option>11am</option>
            </select>
        </div>

        <div class="col s12 form-group">
            <label for="endTime">End Time</label>
            <select class="form-control" id="create_endTime" name="endTime">
                <option>12pm</option>
                <option>1pm</option>
                <option>2pm</option>
                <option>3pm</option>
                <option>4pm</option>
                <option>5pm</option>
                <option>6pm</option>
                <option>7pm</option>
                <option>8pm</option>
                <option>9pm</option>
                <option>10pm</option>
