<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="title2 text-center">
                Retrieve Password
            </div>
        </div>
    </div>


    <form action="/sendPassword">
        <div class="row">
            <div class="input-field col s12 ">
                <label for="retrieve_pass" class="text-center">Type in your email to retrieve password:</label>
                <input type="email" id="retrieve_pass" class="form-control validate" required>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary btn-lg col s8 offset-s2 lead" id="findpass_submit">Retrieve Password</button>
        </div>
    </form>
</div>

<div class="modal fade contact_success" id="modal_pw" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
			<center>
				<p>Password has been sent to your email.</p>
				<button type="button" class="btn btn-primary" id="success_close">Close</button>
			</center>
    </div>
  </div>
</div>

<script>
	{{#if send}}
		$(document).ready(function () {
			$('#modal_pw').modal('show');
		});
	{{/if}}
	
	$("#success_close").click(function(){
    $('#modal_submit').modal('toggle');
  	window.location.href = "/login";
	});
</script>